{
  "name": "@liquid-ui/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "AI-Native UI Component Library - Monorepo",
  "workspaces": [
    "packages/@liquid-ui/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "nx run-many --target=typecheck --all",
    "clean": "nx reset && rm -rf node_modules packages/*/node_modules packages/*/dist",
    "dev:react-native": "nx run @liquid-ui/react-native:start",
    "dev:cloudflare": "nx run @liquid-ui/cloudflare:dev",
    "deploy:cloudflare": "nx run @liquid-ui/cloudflare:deploy",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/react-native": "^12.9.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.4",
    "nx": "^21.6.4",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/liquid-ui.git"
  },
  "keywords": [
    "ui",
    "components",
    "ai",
    "react-native",
    "cloudflare",
    "glassmorphism",
    "design-system"
  ],
  "author": "Liquid UI Team",
  "license": "MIT"
}
