{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist-personql",
    "rootDir": "./src-personql",
    "lib": ["ES2022"],
    "types": ["@cloudflare/workers-types"],
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src-personql/**/*"],
  "exclude": ["node_modules", "dist", "dist-streaming", "dist-personql"]
}
